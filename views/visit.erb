<script type="text/javascript" charset="utf-8">

  $(function() {
      $('#datetimepicker').datetimepicker();
  });

</script>

<h1>Make an appointment</h1>

<p>Please, chose date and time</p>

<form action="/visit" method="POST">

  <div class="form-group">
    <label>Your Name</label>
    <input name="client[name]" type="text" class="form-control" placeholder="Enter your name" value="<%= @c.name %>">
  </div>

  <div class="form-group">
    <label>Your Phone</label>
    <input name="client[phone]" type="text" class="form-control" placeholder="Enter your
    phone" value="<%= @c.phone %>">
  </div>

  <div class="form-group">
    <label>Date and Time</label>
    <input name="client[datestamp]" id="datetimepicker" type="text" class="form-control" placeholder="Enter Date and Time" value="<%= @c.datestamp %>">
  </div>

  <div class="form-group">
    <label>Chose your Barber!!!</label>
    <select name="client[barber]" class="form-control">

      <% @barbers.each do |item| %>

        <option <%= @barber == item['name'] ? 'selected' : '' %>><%= item['name'] %></option>

      <% end %>

    </select>
  </div>

  <div class="form-group">
    <label>Choose your color</label>
    <select name="client[color]" class="form-control">
      <option>Red</option>
      <option>Green</option>
      <option>Blue</option>
      <option>Yellow</option>
      <option>White</option>
    </select>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>

</form>

